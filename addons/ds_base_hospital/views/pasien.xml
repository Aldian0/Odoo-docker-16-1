<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <data>
          <!-- ds.pasien tree view -->
            <record id="ds_pasien_view_tree" model="ir.ui.view">
              <field name="name">ds.pasien.view.tree</field>
              <field name="model">ds.pasien</field>
              <field name="arch" type="xml">
                  <tree string="Daftar Pasien">
                      <field name="no_rm"/>
                      <field name="name"/>
                      <field name="jenis_kelamin"/>
                      <field name="tanggal_lahir"/>
                      <field name="telepon"/>
                      <field name="gol_darah"/>                      
                  </tree>
              </field>
            </record>

            <!-- ds.pasien form view -->
            <record id="ds_pasien_view_form" model="ir.ui.view">
              <field name="name">ds.pasien.view.form</field>
              <field name="model">ds.pasien</field>
              <field name="arch" type="xml">
                <form string="Pasien">

                 <!-- Header: Tombol dan Status -->
                  <header>
                        <button name="action_confirm" states="proses" type="object" string="Konfirmasi" class="oe_highlight"/>
                         <button name="action_progress" states="draft" type="object" string="Proses" class="oe_highlight"/>
                        <!-- <button name="action_cancel" string="Dibatalkan" states="done" type="object"/> -->
                        <button name="action_draft" string="Kembali ke Draft" states="done" type="object" groups="ds_base_hospital.group_hospital_opr"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,process,done"/>
                        <button name="action_confirm" string="Konfirmasi" type="object" states="draft"/>
                      </header>
                    </form>
                  <sheet>
                    <div class="oe_title">
                          <h1>
                              <field id="individual" widget="text" class="text-break" name="name" default_focus="1" placeholder="Rumah Sakit 001"/>
                          </h1>
                    </div>
                      <notebook>

                      <!-- Tab: Data Pribadi -->
                        <page name="Data Pasien" string="Data Pribadi Pasien">
                      <group>
                      <!-- Add your fields here -->
                      <field name="name_id"/>
                      <field name="no_rm"/>
                      <field name="jenis_kelamin" widget="radio"/>
                      <field name="tanggal_lahir"/>
                      <field name="tempat_lahir"/>
                      <field name="gol_darah"/>
                      <field name="status_perkawinan"/>

                   </group> 
                  </page>

                      <!-- Tab: Kontak -->
                        <page name="Kontak" string="Kontak Pasien">
                      <group>
                      <!-- Add your fields here -->
                      <field name="telepon"/>
                      <field name="email"/>
                      <field name="alamat"/>
                      <field name="kode_pos"/>

                        </group> 
                      </page>
                      <page name="Data Wilayah" string="Data Wilayah Pasien">
                      <group>
                        <field name="propinsi_id"/>
                        <field name="kota_id" domain="[('propinsi_id', '=', propinsi_id)]"/>
                        <field name="kecamatan_id" domain="[('kota_id', '=', kota_id)]"/>
                        <field name="desa_id" domain="[('kecamatan_id', '=', kecamatan_id)]"/>
                      </group>
                      </page>

                      <!-- Tab:Kontak Darurat -->
                      <page string="Kontak Darurat">
                  <group>
                    <field name="kontak_darurat_nama"/>
                    <field name="kontak_darurat_telepon"/>
                    <field name="kontak_darurat_hubungan"/>
                  </group>
                </page>
                
                <!-- Tab: Administrasi -->
                <page string="Administrasi">
                  <group>
                    <field name="penyedia_asuransi"/>
                    <field name="nomor_asuransi"/>
                    <field name="tanggal_registrasi"/>
                    <field name="catatan"/>
                  </group>
                </page>

                 </notebook>

                </sheet>
              </field>
            </record>

        <!-- ds.data.pasien tree view -->
        <record id="ds_data_pasien_view_tree" model="ir.ui.view">
          <field name="name">ds.data.pasien.view.tree</field>
          <field name="model">ds.data.pasien</field>
          <field name="arch" type="xml">
            <tree string="Daftar Pasien" default_order="create_date desc">
              <field name="name_id"/>
              <field name="no_rm"/>
              <field name="nik"/>
              <field name="jenis_kelamin"/>
              <field name="tempat_lahir"/>
              <field name="status"/>
            </tree>
          </field>
        </record>

        <!-- ds.data.pasien form view -->
        <record id="ds_data_pasien_view_form" model="ir.ui.view">
          <field name="name">ds.data.pasien.view.form</field>
          <field name="model">ds.data.pasien</field>
          <field name="arch" type="xml">
            <form string="Data Pasien">
              <sheet>
                <group>
                  <field name="name_id"/>
                  <field name="no_rm"/>
                  <field name="nik"/>
                  <field name="jenis_kelamin"/>
                </group>
                <group>
                  <field name="tanggal_lahir"/>
                  <field name="alamat"/>
                  <field name="status"/>
                </group>
              <notebook>
                  <page string="Kontak">
                <group>
                  <field name="telepon"/>
                  <field name="email"/>
                </group>
                    
                  </page>
                </notebook>
              </sheet>
            </form>
          </field>
        </record>

        <!-- ds.data.pasien action window -->
        <record id="ds_data_pasien_action" model="ir.actions.act_window">
        <field name="name">Data Pasien</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ds.data.pasien</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">Buat pasien baru</p>
          <p>Silakan tambahkan data pasien seperti nama, nomor rekam medis, dan informasi lainnya.</p>
        </field>
      </record>



        <!-- ds.pasien action window -->
        <record id="ds_pasien_action" model="ir.actions.act_window">
            <field name="name">Pasien</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ds.pasien</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
              <!-- Add Text Here -->
            </p><p>
              <!-- More details about what a user can do with this object will be OK --> 
            
                </p>
            </field>
        </record>

        <menuitem id="menu_ds_hospital_root" name="Pasien" parent="ds_base_hospital_menu_root" action="ds_pasien_action" sequence="10"/> 
        <menuitem id="menu_data_pasien_act" name="Data Pasien" parent="ds_pengaturan_menu_categ" action="ds_data_pasien_action" sequence="20"/>
        <!-- <menuitem id="ds_menu_pasien_root" name="Pasien" parent="menu_ds_hospital_root" sequence="20"/> -->
        <!-- <menuitem id="ds_menu_pasien_manage" name="Manajemen Pasien" parent="ds_menu_pasien_root" action="action_ds_pasien" sequence = "30"/> -->
        </data>
</odoo>