  <!--        PROVINSI VIEW       -->
  <!-- =========================== -->

  <record id="view_wilayah_propinsi_tree" model="ir.ui.view">
    <field name="name">wilayah.propinsi.tree</field>
    <field name="model">wilayah.propinsi</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
      </tree>
    </field>
  </record>

  <record id="view_wilayah_propinsi_form" model="ir.ui.view">
    <field name="name">wilayah.propinsi.form</field>
    <field name="model">wilayah.propinsi</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="wilayah_propinsi_action" model="ir.actions.act_window">
    <field name="name">Data Provinsi</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">wilayah.propinsi</field>
    <field name="view_mode">tree,form</field>
  </record>

