<?xml version='1.0' encoding='utf-8'?>
<odoo>
        <data>
            <!-- ds.rawat.inap tree view -->
            <record id="ds_rawat_inap_view_tree" model="ir.ui.view">
                <field name="name">ds.rawat.inap.view.tree</field>
                <field name="model">ds.rawat.inap</field>
                <field name="arch" type="xml">
                        <tree string="Daftar Rawat Inap Pasien" default_order="tanggal_masuk desc">
                                <field name="no_rekam_medis"/>
                                <field name="nama_pasien"/>
                                <field name="tanggal_masuk"/>
                                <field name="tanggal_keluar"/>
                                <field name="kamar_id"/>
                                <field name="tempat_tidur"/>
                                <field name="kondisi_pasien"/>
                        </tree>
                </field>
            </record>
            <!-- ds.rawat.inap form view -->
            <record id="ds_rawat_inap_view_form" model="ir.ui.view">
                <field name="name">ds.rawat.inap.view.form</field>
                <field name="model">ds.rawat.inap</field>
                <field name="arch" type="xml">
                <form string="Data Rawat Inap">
                    <sheet>
                    <group>
                    <group>
                        <field name="pasien_id"/>
                        <field name="no_rekam_medis" readonly="1"/>
                        <field name="nama_pasien" readonly="1"/>
                        <field name="tanggal_lahir" readonly="1"/>
                        <field name="jenis_kelamin" readonly="1"/>
                    </group>
                    <group>
                        <field name="golongan_darah" readonly="1"/>
                        <field name="no_telp" readonly="1"/>
                        <field name="email" readonly="1"/>
                    </group>
                    <group>
                        <field name="kamar_id"/>
                        <field name="tempat_tidur"/>
                        <field name="tanggal_masuk"/>
                        <field name="tanggal_keluar"/>
                        <field name="rujukan"/>
                    </group>
                </group>

                <group>
                    <field name="alamat" colspan="4" readonly="1"/>
                </group>

                <notebook>
                    <page string="Tindakan Medis">
                        <field name="tindakan_medis_ids">
                            <tree editable="bottom">
                                <field name="tanggal"/>
                                <field name="tindakan"/>
                                <field name="dokter_id"/>
                                <field name="perawat_id"/>
                                <field name="deskripsi"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Alergi Pasien">
                        <group>
                            <field name="alergi_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="alergi_ids">
                                <tree editable="bottom">
                                    <field name="name_alergi"/>
                                    <field name="tingkat_keparahan"/>
                                    <field name="reaksi"/>
                                    <field name="catatan"/>
                                </tree>
                            </field>
                        </group>
                    </page>


                    <page string="Catatan">
                        <field name="catatan_dokter"/>
                        <field name="catatan_perawat"/>
                    </page>
                                        </notebook>
                                </sheet>
                        </form>
                </field>
            </record>

            <!-- ds.tindakan.medis tree view -->
            <record id="ds_tindakan_medis_view_tree" model="ir.ui.view">
                <field name="name">ds.tindakan.medis.view.tree</field>
                <field name="model">ds.tindakan.medis</field>
                <field name="arch" type="xml">
                        <tree>
                                <field name="tanggal"/>
                                <field name="pasien_id"/>
                                <field name="dokter_id"/>
                                <field name="deskripsi"/>
                                
                        </tree>
                </field>
            </record>

            <!-- ds.tindakan.medis form view -->
            <record id="ds_tindakan_medis_view_form" model="ir.ui.view">
                <field name="name">ds.tindakan.medis.view.form</field>
                <field name="model">ds.tindakan.medis</field>
                <field name="arch" type="xml">
                        <form string="Tindakan Medis">
                                <sheet>
                                        <group>
                                                <field name="tanggal"/>
                                                <field name="rawat_inap_id"/>
                                                <field name="pasien_id" readonly="1"/>
                                                <field name="dokter_id"/>
                                                <field name="perawat_id"/>
                                                <field name="deskripsi"/>  
                                        </group>
                                </sheet>
                        </form>
                </field>
            </record>

            <!-- ds.tindakan.medis action window -->
            <record id="ds_tindakan_medis_action" model="ir.actions.act_window">
                <field name="name">Tindakan Medis</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">ds.tindakan.medis</field>
                <field name="view_mode">tree,form</field>
                <field name="help" type="html">
                        <p class="oe_view_nocontent_create">
                                <!-- Add Text Here -->
                        </p><p>
                                <!-- More details about what a user can do with this object will be OK --> 
                        
                        </p>
                </field>
            </record>

             <!-- ds.alergi.pasien tree view -->
        <record id="ds_alergi_pasien_view_tree" model="ir.ui.view">
            <field name="name">ds.alergi.pasien.view.tree</field>
            <field name="model">ds.alergi.pasien</field>
            <field name="arch" type="xml">
                <tree string="Alergi Pasien">
                    <field name="pasien_id"/>
                    <field name="name_alergi"/>
                    <field name="tingkat_keparahan"/>
                    <field name="reaksi"/>
                </tree>
            </field>
        </record>

        <!-- ds.alergi.pasien form view -->
        <record id="ds_alergi_pasien_view_form" model="ir.ui.view">
            <field name="name">ds.alergi.pasien.view.form</field>
            <field name="model">ds.alergi.pasien</field>
            <field name="arch" type="xml">
                <form string="Alergi Pasien">
                    <sheet>
                        <group>
                            <field name="pasien_id"/>
                            <field name="name_alergi"/>
                            <field name="tingkat_keparahan"/>
                            <field name="reaksi"/>
                            <field name="catatan"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- ds.alergi.pasien action window -->
        <record id="ds_alergi_pasien_action" model="ir.actions.act_window">
            <field name="name">ds.alergi.pasien.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ds.alergi.pasien</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>
            <!-- ds.rawat.inap action window -->
            <record id="ds_rawat_inap_action" model="ir.actions.act_window">
                <field name="name">Rawat Inap</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">ds.rawat.inap</field>
                <field name="view_mode">tree,form</field>
                <field name="help" type="html">
                        <p class="oe_view_nocontent_create">
                                <!-- Add Text Here -->
                        </p><p>
                                <!-- More details about what a user can do with this object will be OK --> 
                        
                        </p>
                </field>
            </record>
            <!-- This Menu Item must have a parent and an action -->
            <!-- <menuitem id="ds_pasien_rawat_inap_menu_categ" name="Pasien Rawat Inap" parent="ds_rawat_jalan_menu_categ" sequence="10"/> -->
            <menuitem id="ds_data_rawat_inap_menu_act" name="Data Rawat Inap" action="ds_rawat_inap_action" parent="ds_pasien_rawat_jalan_menu_categ" sequence="20"/>
            <menuitem id="ds_tindakan_medis_menu_act" name="Tindakan Medis" action="ds_tindakan_medis_action" parent="ds_pasien_rawat_jalan_menu_categ" sequence="60"/>
        </data>
</odoo>