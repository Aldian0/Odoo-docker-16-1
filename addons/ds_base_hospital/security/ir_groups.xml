<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

    <!-- Kategori -->
    <record id="module_category_hospital" model="ir.module.category">
        <field name="name">Hospital</field>
        <field name="description">Hak Aksess Hospital</field>
    </record>

    <!-- Group: Hospital Operator -->
    <record id="group_hospital_opr" model="res.groups">
      <field name="name">Operator Rumah Sakit</field>
      <field name="category_id" ref="ds_base_hospital.module_category_hospital"/>
      <field name="comment">Akses terbatas untuk pengisian data operasional.</field>
    </record>

    <!-- Group: Hospital User -->
    <record id="group_hospital_user" model="res.groups">
      <field name="name">User Rumah Sakit</field>
      <field name="category_id" ref="ds_base_hospital.module_category_hospital"/>
      <field name="comment">Dapat membaca dan menambah data pasien dan layanan.</field>
      <field name="implied_ids" eval="[(4, ref('group_hospital_opr'))]"/>
    </record>
    
    <!-- Group: Hospital Administrator -->
    <record id="group_hospital_admin" model="res.groups">
      <field name="name">Administrator Rumah Sakit</field>
      <field name="category_id" ref="ds_base_hospital.module_category_hospital"/>
      <field name="comment">Memiliki akses penuh ke semua data rumah sakit.</field>
    </record>

  </data>
</odoo>
